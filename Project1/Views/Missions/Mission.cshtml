
@{
    ViewBag.Title = "View";
}

<h2 class="text-center page-header">Missions</h2>
<div class="row">
    <div  id="select-container">
      
        <form class="form-inline" action="_____MissionFAQ" style="margin-left:auto; margin-right:auto;">
            <div class="form-group">
                <label for="mission">Select Mission:</label>
                <select class="form-control" name="mission" id="mission">
                    <option value="cdn">Colorado Denver North</option>
                    <option value="gc">Guatemala Coban</option>
                    <option value="jt">Japan Tokyo</option>
                </select>
                <button type="submit" class="btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

